{% block cbax_lexicon_page_filter %}
    <div class="lexicon-filter">
    
        {% block cbax_lexicon_page_text_filter_button %}
            <button class="btn btn-primary lexicon-filter-panel-wrapper-toggle"
                    type="button"
                    data-offcanvas-filter="true"
                    aria-haspopup="true"
                    aria-expanded="false"
                    aria-label="{{ "general.menuLink"|trans }}">
                {% block element_product_listing_filter_button_icon %}
                    {% sw_icon 'sliders-horizontal' %}
                {% endblock %}
                &nbsp;{{ "cbaxLexicon.page.filter.button"|trans }}
            </button>
        {% endblock %}
    
        {% block cbax_lexicon_page_filter_panel %}
            <div id="filter-panel-wrapper" class="filter-panel-wrapper" data-offcanvas-filter-content="true">
                {% sw_include '@Storefront/storefront/cbax-lexicon/filter/filter-panel.html.twig' %}
            </div>
        {% endblock %}
        
    </div>
{% endblock %}
