{% sw_extends '@Storefront/storefront/page/product-detail/properties.html.twig' %}

{% block page_product_detail_properties_item_label %}
    {% if ('name' in config('CbaxModulLexicon.config.activeProperties')) %}
        <th class="properties-label">{{ group.translated.name|raw }}:</th>
    {% else %}
        <th class="properties-label">{{ group.translated.name|e }}:</th>
    {% endif %}
{% endblock %}
{% block page_product_detail_properties_item_value %}
    <td class="properties-value">
        {% apply spaceless %}
            {% for option in group.options %}
                {% set i = ( i | default(0) ) + 1 %}
                <span>{% if i > 1 %}, {% endif %}
                    {% if ('value' in config('CbaxModulLexicon.config.activeProperties')) %}
                        {{ option.translated.name|raw }}
                    {% else %}
                        {{ option.translated.name|e }}
                    {% endif %}
                </span>
            {% endfor %}
        {% endapply %}
    </td>
{% endblock %}
