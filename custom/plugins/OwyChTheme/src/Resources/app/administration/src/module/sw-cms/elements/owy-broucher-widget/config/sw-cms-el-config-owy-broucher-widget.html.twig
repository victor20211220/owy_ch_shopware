{% block sw_cms_el_config_owy_broucher_widget %}
    <sw-tabs class="sw-cms-el-config-owy_awards_widget_slider__tabs" defaultItem="tab1">

        <template slot-scope="{ active }" >
            {% block sw_cms_el_config_owy_awards_widget_tab_tab1 %}
            <sw-tabs-item title="Tab 1"
                          name="tab1"
                          :activeTab="active">
               Tab 1
            </sw-tabs-item>
            {% endblock %}

            {% block sw_cms_el_config_owy_broucher_widget_tab2 %}
            <sw-tabs-item title="Tab 2"
                          name="tab2"
                          :activeTab="active">
               Tab 2
            </sw-tabs-item>
            {% endblock %}

            {% block sw_cms_el_config_owy_broucher_widget_tab3 %}
                <sw-tabs-item title="Tab 3"
                              name="tab3"
                              :activeTab="active">
                  Tab 3
                </sw-tabs-item>
            {% endblock %}

            {% block sw_cms_el_config_owy_broucher_widget_tab4 %}
                <sw-tabs-item title="Tab 4"
                              name="tab4"
                              :activeTab="active">
                   Tab 4
                </sw-tabs-item>
            {% endblock %}

        </template>


        <template slot="content" slot-scope="{ active }">
            {% block sw_cms_el_owy_broucher_widget_config_tab1 %}
            <sw-container v-if="active === 'tab1'" class="sw-cms-el-config-owy_broucher_widget__tab-tab1">
                <sw-media-field required v-model="element.config.broucher1image.value" label="Broucher 1 Image"/>

                <sw-text-field
                        v-model="element.config.broucher1title1.value"
                        label="Broucher 1 Title 1"
                       />

                <sw-text-field
                        v-model="element.config.broucher1title2.value"
                        label="Broucher 1 Title 2"
                />
                <sw-media-field required v-model="element.config.broucher1pdf.value" label="Broucher 1 PDF"/>


            </sw-container>
            {% endblock %}

            {# general settings tab ends #}

            {% block sw_cms_el_owy_broucher_widget_config_tab2 %}
            <sw-container v-if="active === 'tab2'" class="sw-cms-el-config-owy_broucher_widget__tab-tab2">
                <sw-media-field required v-model="element.config.broucher2image.value" label="Broucher 2 Image"/>

                <sw-text-field
                        v-model="element.config.broucher2title1.value"
                        label="Broucher 2 Title 1"
                />

                <sw-text-field
                        v-model="element.config.broucher2title2.value"
                        label="Broucher 2 Title 2"
                />
                <sw-media-field required v-model="element.config.broucher2pdf.value" label="Broucher 2 PDF"/>


            </sw-container>
            {% endblock %}

            {% block sw_cms_el_owy_broucher_widget_config_tab3 %}
                <sw-container v-if="active === 'tab3'" class="sw-cms-el-config-owy_broucher_widget__tab-tab3">
                    <sw-media-field required v-model="element.config.broucher3image.value" label="Broucher 3 Image"/>

                    <sw-text-field
                            v-model="element.config.broucher3title1.value"
                            label="Broucher 3 Title 1"
                    />

                    <sw-text-field
                            v-model="element.config.broucher3title2.value"
                            label="Broucher 3 Title 2"
                    />
                    <sw-media-field required v-model="element.config.broucher3pdf.value" label="Broucher 3 PDF"/>


                </sw-container>
            {% endblock %}

            {% block sw_cms_el_owy_broucher_widget_config_tab4 %}
                <sw-container v-if="active === 'tab4'" class="sw-cms-el-config-owy_broucher_widget__tab-tab4">
                    <sw-media-field required v-model="element.config.broucher4image.value" label="Broucher 4 Image"/>

                    <sw-text-field
                            v-model="element.config.broucher4title1.value"
                            label="Broucher 4 Title 1"
                    />

                    <sw-text-field
                            v-model="element.config.broucher4title2.value"
                            label="Broucher 4 Title 2"
                    />
                    <sw-media-field required v-model="element.config.broucher4pdf.value" label="Broucher 4 PDF"/>


                </sw-container>
            {% endblock %}


        </template>
    </sw-tabs>

{% endblock %}
