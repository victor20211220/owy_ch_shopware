{% block sw_cms_el_config_owy_switch_cmspage %}
    <sw-tabs class="sw-cms-el-config-owy_switch_cmspage__tabs" defaultItem="tab1">

        <template slot-scope="{ active }" >
            {% block sw_cms_el_config_owy_switch_cmspage_tab_tab1 %}
            <sw-tabs-item title="Tab 1"
                          name="tab1"
                          :activeTab="active">
                    Tab 1
            </sw-tabs-item>
            {% endblock %}

            {% block sw_cms_el_config_owy_switch_cmspage_tab2 %}
            <sw-tabs-item title="Tab 2"
                          name="tab2"
                          :activeTab="active">
                    Tab 2
            </sw-tabs-item>
            {% endblock %}

            {% block sw_cms_el_config_owy_switch_cmspage_tab3 %}
                <sw-tabs-item title="Tab 3"
                              name="tab3"
                              :activeTab="active">
                    Tab 3
                </sw-tabs-item>
            {% endblock %}

            {% block sw_cms_el_config_owy_switch_cmspage_tab4 %}
                <sw-tabs-item title="Tab 4"
                              name="tab4"
                              :activeTab="active">
                    Tab 4
                </sw-tabs-item>
            {% endblock %}
        </template>


        <template slot="content" slot-scope="{ active }">
            {% block sw_cms_el_owy_switch_cmspage_config_tab1 %}
            <sw-container v-if="active === 'tab1'" class="sw-cms-el-config-owy_switch_cmspage__tab-tab1">
                <sw-text-field
                        v-model="element.config.heading.value"
                        label="Heading"
                       />

                <sw-text-field
                        v-model="element.config.title1.value"
                        label="Title"
                />

                <sw-entity-single-select
                        v-model="element.config.cmsPage1.value"
                        class="sw-cms-page-select-box"
                        entity="cms_page"
                />

                <sw-text-field
                        v-model="element.config.title2.value"
                        label="Title"
                />

                <sw-entity-single-select
                        v-model="element.config.cmsPage2.value"
                        class="sw-cms-page-select-box"
                        entity="cms_page"
                />

            </sw-container>
            {% endblock %}


            {% block sw_cms_el_owy_switch_cmspage_config_tab2 %}
            <sw-container v-if="active === 'tab2'" class="sw-cms-el-config-owy_switch_cmspage__tab-tab2">
                <sw-text-field
                        v-model="element.config.title3.value"
                        label="Title"
                />

                <sw-entity-single-select
                        v-model="element.config.cmsPage3.value"
                        class="sw-cms-page-select-box"
                        entity="cms_page"
                />

                <sw-text-field
                        v-model="element.config.title4.value"
                        label="Title"
                />

                <sw-entity-single-select
                        v-model="element.config.cmsPage4.value"
                        class="sw-cms-page-select-box"
                        entity="cms_page"
                />

            </sw-container>
            {% endblock %}

            {% block sw_cms_el_owy_switch_cmspage_config_tab3 %}
                <sw-container v-if="active === 'tab3'" class="sw-cms-el-config-owy_switch_cmspage__tab-tab2">
                    <sw-text-field
                            v-model="element.config.title5.value"
                            label="Title"
                    />

                    <sw-entity-single-select
                            v-model="element.config.cmsPage5.value"
                            class="sw-cms-page-select-box"
                            entity="cms_page"
                    />

                    <sw-text-field
                            v-model="element.config.title6.value"
                            label="Title"
                    />

                    <sw-entity-single-select
                            v-model="cmsPage6"
                            v-model="element.config.cmsPage6.value"
                            entity="cms_page"
                    />
                </sw-container>
            {% endblock %}

            {% block sw_cms_el_owy_switch_cmspage_config_tab4 %}
                <sw-container v-if="active === 'tab4'" class="sw-cms-el-config-owy_switch_cmspage__tab-tab4">
                    <sw-text-field
                            v-model="element.config.title7.value"
                            label="Title"
                    />

                    <sw-entity-single-select
                            v-model="element.config.cmsPage7.value"
                            class="sw-cms-page-select-box"
                            entity="cms_page"
                    />

                    <sw-text-field
                            v-model="element.config.title8.value"
                            label="Title"
                    />

                    <sw-entity-single-select
                            v-model="element.config.cmsPage8.value"
                            class="sw-cms-page-select-box"
                            entity="cms_page"
                    />
                </sw-container>
            {% endblock %}
        </template>
    </sw-tabs>

{% endblock %}
