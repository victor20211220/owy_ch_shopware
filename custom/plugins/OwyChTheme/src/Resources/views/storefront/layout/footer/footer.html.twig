{% sw_extends '@Storefront/storefront/layout/footer/footer.html.twig' %}
{% block layout_footer_inner_container %}

	{% set owyDefaultShop = app.request.server.get('APP_URL') %}
	{% set owyLocale = app.request.get('_locale') %}

	{% set owyUrl = app.request.server.get('APP_URL')  %}
	{% if owyLocale == 'de-DE' %}

		{% set owyUrl = owyUrl ~ '' %}

	{% elseif owyLocale == 'fr-FR' %}
        {% set owyUrl = owyUrl ~ 'fr' %}

	{% elseif owyLocale == 'en-GB' %}
        {% set owyUrl = owyUrl ~ 'en' %}
	{% else %}
        {% set owyUrl = owyUrl ~ '' %}
	{% endif %}


	<div class="footer-main-emty" id="owyshopLink" data-shop-url="{{ owyUrl }}" {% if controllerName|lower == 'navigation' and controllerAction == 'home' %}data-add-to-compare-button="true"{% endif %}></div>
	<div class="container">
		{% block layout_footer_navigation %}{% endblock %}
		{% block layout_footer_payment_shipping_logos %}{% endblock %}
	</div>
	{% set currentPageId = page.header.navigation.active.id %}

	{% block layout_footer_bottom %}
		<div class="footer-bottom customfooter">
			{% block layout_footer_service_menu %}
				<div class="container">
					{% block layout_footer_service_menu_content %}
						{% apply spaceless %}
						<ul class="footer-service-menu-list list-unstyled">
							{% for serviceMenuItem in page.header.serviceMenu %}
								{% block layout_footer_service_menu_item %}
									<li class="footer-service-menu-item {% if currentPageId == serviceMenuItem.id %}fo--active{% endif %}">
										<a class="footer-service-menu-link" href="{{ category_url(serviceMenuItem) }}" {% if category_linknewtab(serviceMenuItem) %} target="_blank" {% endif %} title="{{ serviceMenuItem.translated.name }}">
											{{ serviceMenuItem.translated.name }}
										</a>
									</li>
								{% endblock %}
							{% endfor %}
						</ul>
						{% endapply %}
					{% endblock %}
				</div>
			{% endblock %}
			{% block layout_footer_vat %}{% endblock %}
			{% block layout_footer_copyright %}
