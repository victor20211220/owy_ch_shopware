<div class="row navigation-flyout-content m-0">
    <div class="col-12 col-xl-12">
        <div class="mega__menu--wrapper">
            <div class="navigation-flyout-categories mega__menu--main">
                <div class="row">
                        <div class="col-md-2 level-two" style="display: none">
                            <div class="list-group">
                                {% set children = navigationTree.children %}
                                {% for treeItem in children %}
                                {% set category = treeItem.category %}
                                    <a class="list-group-item" href="{{ category_url(category) }}" id="lvl1-{{ category.id }}" data-level1-id="{{ category.id }}">{{ category.name }}</a>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-md-2 level-three" style="display: none">
                            {% set secondChildren = navigationTree.children %}
                            {% for treeItems in secondChildren %}
                                {% set category = treeItems.category %}
                                {% set subCategories = treeItems.children %}
                                {% if category.childCount > 0 %}
                                    <div class="list-group" id="lev2-{{ category.id }}" data-id="{{ category.id }}" style="display: none;">
                                        {% for treeItem in subCategories %}
                                            <a class="list-group-item" href="{{ category_url(treeItem.category) }}" data-level3-id="{{ treeItem.id }}"  id="datalvel-{{ treeItem.id }}">  {{ treeItem.category.translated.name }}</a>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="col-md-2 level-four" style="display: none">
                            {% set secondChildren = navigationTree.children %}
                            {% for treeItems in secondChildren %}
                                {% set category = treeItems.category %}
                                {% set subCategories = treeItems.children %}
                                {% if category.childCount > 0 %}
                                    {% for treeItem in subCategories %}
                                        {% if treeItem.children|length > 0 %}
                                                {% set fourthLevel = treeItem.children %}
                                                <div class="list-group" id="lev3-{{ treeItem.id }}" style="display: none;">
                                                    {% for innerFourthEle in fourthLevel %}
                                                        <a class="list-group-item" href="{{ category_url(innerFourthEle.category) }}">  {{ innerFourthEle.category.translated.name }}</a>
                                                    {% endfor %}

                                                </div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
